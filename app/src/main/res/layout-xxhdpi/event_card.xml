<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@android:color/transparent"
    android:elevation="0dp"
    android:gravity="center_horizontal"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="0dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:gravity="center">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/roundedImage1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/flower"
            app:riv_corner_radius_top_left="0dp"
            app:riv_corner_radius_top_right="0dp" />


        <TextView
            android:id="@+id/imgLocation"
            fontPath="fonts/Exo2/Exo2-Bold.otf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/roundedImage1"
            android:layout_alignStart="@+id/roundedImage1"
            android:layout_below="@+id/roundedImage1"
            android:background="@android:color/transparent"
            android:text="Yesterday"
            android:textColor="@color/section_header"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvDate"
            fontPath="fonts/Exo2/Exo2-Italic.otf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/roundedImage1"
            android:layout_alignStart="@+id/roundedImage1"
            android:layout_below="@+id/imgLocation"
            android:background="@android:color/transparent"
            android:paddingBottom="10dp"
            android:text="(10 Photos)"
            android:textColor="@color/section_font"
            android:textSize="12sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>